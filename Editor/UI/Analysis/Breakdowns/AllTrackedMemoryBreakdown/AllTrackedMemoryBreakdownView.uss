.all-tracked-memory-breakdown-view__dark:root
{
  --all-tracked-memory-breakdown-view__table-size-bar__background-color: #5A5A5A;
  --all-tracked-memory-breakdown-view__table-size-bar__fill-background-color: #C4C4C4;
  --all-tracked-memory-breakdown-view__tree-view__background-color: #3E3E3E;
  --all-tracked-memory-breakdown-view__tree-view__border-color: #232323;
  --all-tracked-memory-breakdown-view__loading-overlay__background-color: rgba(35, 35, 35, 0.8);
}

.all-tracked-memory-breakdown-view__light:root
{
  --all-tracked-memory-breakdown-view__table-size-bar__background-color: #CBCBCB;
  --all-tracked-memory-breakdown-view__table-size-bar__fill-background-color: white;
  --all-tracked-memory-breakdown-view__tree-view__background-color: #C8C8C8;
  --all-tracked-memory-breakdown-view__tree-view__border-color: #999999;
  --all-tracked-memory-breakdown-view__loading-overlay__background-color: rgba(0, 0, 0, 0.2);
}

#all-tracked-memory-breakdown-view
{
    flex-grow: 1;
    margin: 16px;
}

#all-tracked-memory-breakdown-view__search-field-container
{
    flex-direction: row;
    flex-shrink: 0;
    justify-content: space-between;
    align-items: center;
}

#all-tracked-memory-breakdown-view__description-label
{
    flex-shrink: 1;
    margin-right: 16px;
    overflow: hidden;
    text-overflow: ellipsis;
}

#all-tracked-memory-breakdown-view__search-field
{
    height: 14px;
    margin: 0px;
    padding: 4px;
    width: 40%;
}

#all-tracked-memory-breakdown-view__search-field TextField
{
    padding-left: 4px;
}

#all-tracked-memory-breakdown-view__search-field TextElement
{
    font-size: 12px;
}

#all-tracked-memory-breakdown-view__table-size-bar
{
    flex-shrink: 0;
    margin: 20px 0px 0px;
}

#all-tracked-memory-breakdown-view__table-size-bar .detailed-size-bar__bar
{
    background-color: var(--all-tracked-memory-breakdown-view__table-size-bar__background-color);
    height: 14px;
}

#all-tracked-memory-breakdown-view__table-size-bar .detailed-size-bar__bar .progress-bar__fill
{
    background-color: var(--all-tracked-memory-breakdown-view__table-size-bar__fill-background-color);
    min-width: 1px;
    transition-duration: 0.23s;
    transition-property: width;
    transition-timing-function: ease-out;
}

#all-tracked-memory-breakdown-view__table-size-bar .detailed-size-bar__size-label
{
    flex-shrink: 1;
    overflow: hidden;
    text-overflow: ellipsis;
}

#all-tracked-memory-breakdown-view__table-size-bar .detailed-size-bar__total-label
{
    margin-left: 16px;
}

#all-tracked-memory-breakdown-view__table-size-bar .detailed-size-bar__footer
{
    margin: 8px 0px;
}

#all-tracked-memory-breakdown-view__tree-view__main-container
{
    flex-grow: 1;
}

#all-tracked-memory-breakdown-view__tree-view
{
    background-color: var(--all-tracked-memory-breakdown-view__tree-view__background-color);
    border-color: var(--all-tracked-memory-breakdown-view__tree-view__border-color);
    border-top-width: 1px;
    flex-grow: 1;
}

#all-tracked-memory-breakdown-view__tree-view
{
    flex-grow: 1;
}

#all-tracked-memory-breakdown-view__tree-view .unity-multi-column-header
{
    margin: 2px 8px;
}

#all-tracked-memory-breakdown-view__tree-view #unity-content-viewport
{
    margin: 0px 8px;
}

#all-tracked-memory-breakdown-view__loading-overlay
{
    align-items: center;
    background-color: var(--all-tracked-memory-breakdown-view__loading-overlay__background-color);
    bottom: 0px;
    justify-content: center;
    left: 0px;
    position: absolute;
    right: 0px;
    top: 0px;
    transition-duration: 0.23s;
    transition-property: opacity;
    transition-timing-function: ease-out;
}

#all-tracked-memory-breakdown-view__loading-overlay:enabled
{
    display: flex;
    opacity: 1;
    visibility: visible;
}

#all-tracked-memory-breakdown-view__loading-overlay:disabled
{
    display: none;
    opacity: 0;
    visibility: hidden;
}

#all-tracked-memory-breakdown-view__loading-overlay ActivityIndicator
{
    background-image: resource('Packages/com.unity.memoryprofiler/Package Resources/Icons/Loading.png');
    height: 16px;
    width: 16px;
}

#all-tracked-memory-breakdown-view__error-label
{
    -unity-text-align: middle-center;
    background-color: var(--all-tracked-memory-breakdown-view__loading-overlay__background-color);
    bottom: 0px;
    display: none;
    left: 0px;
    position: absolute;
    right: 0px;
    top: 0px;
    visibility: hidden;
}
